	sed -i '/obj-$(CONFIG_RTL/c\obj-$(CONFIG_RTL8192ES) := $(MODULE_NAME).o' Makefile
	sed -i '/export CONFIG_RTL/c\export CONFIG_RTL8192ES = m' Makefile

	cp -f Kconfig_rtl8192e_sdio_linux Kconfig
}

