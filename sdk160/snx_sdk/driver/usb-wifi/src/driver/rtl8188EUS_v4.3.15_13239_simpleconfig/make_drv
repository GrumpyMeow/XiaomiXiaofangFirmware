	sed -i '/CONFIG_RTL8188E = /c\CONFIG_RTL8188E = y' Makefile
}
nic_8812a(){
	nic_resetAll
	sed -i '/CONFIG_RTL8812A = /c\CONFIG_RTL8812A = y' Makefile
}
nic_8821a(){
