{
	sed -i '/obj-$(CONFIG_RTL/c\obj-$(CONFIG_RTL8192EU) := $(MODULE_NAME).o' Makefile
	sed -i '/export CONFIG_RTL/c\export CONFIG_RTL8192EU = m' Makefile

