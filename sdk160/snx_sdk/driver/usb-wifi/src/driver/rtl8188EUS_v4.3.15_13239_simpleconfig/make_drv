{
	sed -i '/obj-$(CONFIG_RTL/c\obj-$(CONFIG_RTL8814AU) := $(MODULE_NAME).o' Makefile
	sed -i '/export CONFIG_RTL/c\export CONFIG_RTL8814AU = m' Makefile

	cp -f Kconfig_rtl8814a_usb_linux Kconfig
